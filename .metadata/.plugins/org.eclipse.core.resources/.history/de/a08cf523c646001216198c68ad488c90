
public class VoitureHybride extends Voiture {
	
	protected double niveauBatterie;
	protected double niveauReservoir;
	
	public static int CAPACITE_FREINAGE = 50;
	public static int HABILITE = 30;
	
	public static final int VITESSE_MAX = 100;
	
	public boolean hasToFill() {
		return this.niveauBatterie < 10 && this.niveauReservoir < 10;
	}

}
